<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
	<!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
	<id>net.pega.intellij.modeler.view</id>
	<!-- Text to display as name on Preferences/Settings | Plugin page -->
	<name>Pega Modeler</name>
	<!-- Indicate this plugin can be loaded in all IntelliJ Platform-based products. -->
	<depends>com.intellij.modules.platform</depends>
	<depends optional="true">PlantUML integration</depends><!-- Text to display as description on Preferences/Settings | Plugin page -->
	<description>
		<![CDATA[
      Pega Modeler helps developper to view Pega application architecture.<br>
      It produces:
      <li>
      <ul>Data Model</ul>
      </li>
    ]]>
	</description>
	<change-notes>
		<![CDATA[
      <ul>
        <li><b>1.0.0</b> Release 2023.1.</li>
      </ul>
    ]]>
	</change-notes>
	<!-- Text to display as company information on Preferences/Settings | Plugin page -->
	<vendor url="https://plugins.jetbrains.com">Pega community</vendor>
	<resource-bundle>messages.PegaBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<projectConfigurable
				parentId="tools"
				instance="net.pega.intellij.modeler.config.PegaProjectConfigurable"
				id="net.pega.intellij.modeler.config.PegaProjectConfigurable"
				displayName="Pega Project Settings"
				nonDefaultProject="true"/>
		<projectService
				serviceImplementation="net.pega.intellij.modeler.config.PegaProjectSettings" />
		<!--	OOOOOO KKKKKKKK    -->
		<toolWindow id="Pega" secondary="true" icon="AllIcons.General.Modified" anchor="right"
					factoryClass="net.pega.intellij.modeler.view.PegaWindowFactory"/>
		<!--<projectConfigurable groupId="editor" groupWeight="110" dynamic="true"
							 bundle="messages.PegaBundle"
							 key="pega.plugin.display.name"
							 id="pega-modeler"
							 instance="net.pega.intellij.modeler.config.PegaProjectConfigurable"/>-->
	</extensions>
</idea-plugin>
